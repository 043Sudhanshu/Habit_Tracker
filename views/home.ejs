<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="/css/home.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    </head>
    <body>
        <main>

          <nav><h2>Habit Tracker</h2></nav>
          
          <div>
              <form  action='/addhabit' method="POST">
              <input type="text" name='name' placeholder="Add your habit">
              <button type='submit'> Add habit </button>
              </form>
          </div>
          
        
            <%for(Habit of Habits){%>
                <div class='habit'>
                        
                       <div>
                            <a href="/habit/?name=<%=Habit.name%>">
                                <%=Habit.name.toUpperCase()%>
                            </a> 
                        </div>

                        <div>
                           <a href="/remove/?name=<%=Habit.name%>">
                            <i style='font-size:50px;' class="fa fa-minus-circle"></i>
                        </a>
                        </div>
                
                    </div>
                
            <%}%>
      

        </main>
        <script src='/js/habit.js'></script>
    </body>
</html>